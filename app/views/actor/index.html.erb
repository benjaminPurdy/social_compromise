<div class="container">
    <div class="actor-content">
        <div class="row">
            <div class="col-md-3">
                <img class="pull-left" src="http://image.tmdb.org/t/p/w500/<%=@actor.profile_path%>" alt="<%=@actor.name%>">
            </div>
            <div class="col-md-9">
                <h3>
                    <%=@actor.name%>
                </h3>
                <hr>
                <p>
                    <%=@actor.biography%>
                </p>
                <% if @actor.deathday.nil? || @actor.deathday.empty? %>
                  <label>Birthday: </label>
                  <span><%=@actor.birthday%></span>
                <%else%>
                  <label>Life: </label>
                  <span><%=@actor.birthday%> - <%=@actor.deathday%></span>
                <%end%>
                <br>
                <label>
                    Place of Birth
                </label>
                <span><%=@actor.place_of_birth%></span>
            </div>
        </div>
        <label>
            Stared in
        </label>
        <div class="movies-stared-in hover-link">
          <% @movies.first(3).each do |movie| %>
              <a href="/movie/index?id=<%=movie["id"]%>" class="pull-left">
                <div class="media">
                    <div class="media-left">
                            <img class="media-object" src="http://image.tmdb.org/t/p/w500/<%=movie["poster_path"]%>" alt="<%=movie["title"]%>">
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">
                            <%=movie["title"]%>
                        </h4>
                        <i>Playing <%=movie["character_name"]%></i>
                        <br>
                        <%=truncate(movie["overview"], length: 250)%>
                    </div>
                </div>
              </a>
          <%end%>
          <%if @movies.count >3 %>
            <label>Click here for more similar movies</label>
          <%end%>
        </div>
    </div>

    </div>
</div>