<%= devise_error_messages! %>
<div class="forgot-password-page">
    <div class="lb-header">
        <a href=<%=new_session_path(resource_name)%> id="login-box-link">Login</a>
        <a href=<%=new_registration_path(resource_name)%> id="signup-box-link">Sign Up</a>
    </div>
    <div class="social-login">
        <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, "facebook") %>
        <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, "google_oauth2") %>
    </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'forgot-password-form', method: :post }) do |f| %>
    <h4>Forgot your password?</h4>

    <div class="u-form-group">
        <input placeholder="Email" type="email" value="" name="user[email]" id="user_email">
    </div>

    <div class="form-controls">
      <%= f.submit "Send Email" %>
      <a class='cancel-form' href="/"> Cancel </a>
    </div>
<% end %>
</div>
