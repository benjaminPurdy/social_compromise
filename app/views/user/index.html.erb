<div class="container">
    <div class="specific-user-profile">
        <div class="page-header">
            <h3>
                <%=@user.display_name%>
            </h3>
        </div>
        <div class="row">
            <div class="col-md-3">
                <img class="pull-left" src="http://image.tmdb.org/t/p/w500//3Rdq9ZYEPxTJxyx1GKdlR6gThzV.jpg"
                     alt="display_name">
            </div>
            <div class="col-md-9">
                <label>
                    About <%=@user.display_name%>:
                </label>
                <%if @user.bio.nil? || @user.bio.empty?%>
                  <p> Undefined </p>
                <%else%>
                  <p> <%=@user.bio%> </p>
                <%end%>
                <label> Age: </label>
                <%if @user.age.nil? || @user.age.empty?%>
                  <span> Undefined </span>
                <%else%>
                  <span> <%=@user.age%> </span>
                <%end%>
                <br>
                 <br>
                <br>
            </div>
        </div>
    </div>
</div>